<%= render 'shared/nav' %>
<h1 class="text-center mt-4">List of Articles</h1>
<div class="container">
  <% @articles.each do |article| %>
   <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card-header text-center shadow mb-3 rounded">
      <div class="card-header font-italic">
        by <%= article.user.user_name if article.user %>
        </div>
        <div class="card-body text-white bg-dark">
          <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
          <div class="card-text text-left"><%= article.body %></div>
          <button><%= link_to 'Read more',article_path(article) %><button> 
        </div>
        <div class="card-footer text-muted text-center mb-2">
          <small>Created <%= time_ago_in_words(article.created_at) %> ago</small> |
          <small>Updated <%= time_ago_in_words(article.updated_at) %> ago</small>
        </div>
       </div>
      </div>
    </div>
   <% end %>
  </div>
  